<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.dellpc.parkingreservation.Login_client"
    tools:showIn="@layout/app_bar_login_client"
    android:scrollbarStyle="insideInset">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Parking Board"
        android:textColor="@color/black"
        android:textSize="30dp"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"/>

    <Button
        android:id="@+id/request"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Pending Requests"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="2-Wheeler"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="15dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/two_wheeler_clicked"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mark 2 Wheeler"
            />
        <Button
            android:id="@+id/two_wheeler_unclicked"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Unmark 2 wheeler"/>
    </LinearLayout>
    <GridLayout
        android:id="@+id/two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="5"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="4-Wheeler"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="15dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/four_wheeler_clicked"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mark 4 Wheeler"
            />
        <Button
            android:id="@+id/four_wheeler_unclicked"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Unmark 4 wheeler"/>
    </LinearLayout>
    <GridLayout
        android:id="@+id/four"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="5"/>

</LinearLayout>
</ScrollView>