<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dellpc.parkingreservation.Register_client2"
    android:scrollbars="vertical"
    android:scrollbarStyle="insideInset">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Parking Details"
            android:layout_marginTop="10dp"
            android:textSize="25dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/black"
            android:textStyle="bold"/>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/no_staff_client"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Number of Staff"
                android:textSize="20dp"
                android:inputType="number"
                />
        </android.support.design.widget.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Technical Education Of Staff"
            android:textSize="20dp"
            />
        <RadioGroup
            android:id="@+id/tech_edu_client"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp">
            <RadioButton
                android:id="@+id/yes"
                android:text="Yes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <RadioButton
                android:id="@+id/no"
                android:text="No"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RadioGroup>
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/no_4wheeler_client"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Number of 4 wheeler space"
                android:textSize="20dp"
                android:inputType="number"
                />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/no_2wheeler_client"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Number of 2 wheeler space"
                android:textSize="20dp"
                android:inputType="number"
                />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/width_road_client"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Width of road around your place (in feet)"
                android:textSize="20dp"
                android:inputType="number"
                />
        </android.support.design.widget.TextInputLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:textSize="20dp"
                android:text="Parking Charges"/>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/charge_2wheeler_client"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="2 wheeler charges"
                android:textSize="20dp"
                android:inputType="number"
                />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/charge_4wheeler_client"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="4 wheeler charges"
                android:textSize="20dp"
                android:inputType="number"
                />
        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/register_client"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Register"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"/>

    </LinearLayout>
</ScrollView>
